{
  "caption": "Finding",
  "category": "findings",
  "description": "This is a base finding event definition, to be inherited by all the classes defined in the Findings category.",
  "extends": "base_event",
  "name": "finding",
  "attributes": {
    "activity_id": {
      "enum": {
        "99": {
          "caption": "Other",
          "description": "The activity is not mapped."
        },
        "0": {
          "caption": "Unknown",
          "description": "The activity is unknown."
        }, 
        "1": {
          "caption": "Create",
          "description": "A security finding is created."
        },
        "2": {
          "caption": "Update",
          "description": "A security finding is updated."
        },
        "3": {
          "caption": "Close",
          "description": "A security finding has been closed."
        }
      }
    },
    "comment": {
      "description": "A user provided comment about the finding.",
      "group": "context",
      "requirement": "optional"
    },
    "confidence": {
      "group": "context",
      "requirement": "optional"
    },
    "confidence_id": {
      "group": "context",
      "requirement": "recommended"
    },
    "confidence_score": {
      "group": "context",
      "requirement": "optional"
    },
    "end_time": {
      "description": "The time of the most recent event included in the finding."
    },
    "finding": {
      "group": "primary",
      "requirement": "required"
    },
    "start_time": {
      "description": "The time of the least recent event included in the finding."
    }
  }
}