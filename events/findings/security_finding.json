{
  "uid": 1,
  "caption": "Security Finding",
  "category": "findings",
  "description": "Security Finding events describe findings, detections, anomalies, alerts and/or actions performed by security products",
  "extends": "base_event",
  "name": "security_finding",
  "@deprecated": {
    "message": "Use the new specific classes according to the use-case: <code>Vulnerability Finding, Compliance Finding, Detection Finding, Incident Finding, Data Security Finding.</code>",
    "since": "1.1.0"
  },
  "attributes": {
    "activity_id": {
      "enum": {
        "1": {
          "caption": "Create",
          "description": "A security finding was created."
        },
        "2": {
          "caption": "Update",
          "description": "A security finding was updated."
        },
        "3": {
          "caption": "Close",
          "description": "A security finding was closed."
        }
      }
    },
    "analytic": {
      "group": "primary",
      "requirement": "recommended"
    },
    "attacks": {
      "description": "An array of <a target='_blank' href='https://attack.mitre.org'>MITRE ATT&CKÂ®</a> objects describing the tactics, techniques & sub-techniques associated to the Finding.",
      "group": "context",
      "requirement": "optional",
      "profile": null
    },
    "cis_csc": {
      "group": "context",
      "requirement": "optional"
    },
    "compliance": {
      "group": "context",
      "requirement": "optional"
    },
    "confidence": {
      "group": "primary",
      "requirement": "recommended",
      "profile": null
    },
    "confidence_id": {
      "group": "primary",
      "requirement": "recommended",
      "sibling": "confidence",
      "profile": null
    },
    "confidence_score": {
      "group": "primary",
      "requirement": "recommended",
      "profile": null
    },
    "data_sources": {
      "group": "context",
      "requirement": "optional"
    },
    "evidence": {
      "group": "context",
      "requirement": "optional"
    },
    "finding": {
      "group": "primary",
      "requirement": "required"
    },
    "impact": {
      "group": "primary",
      "requirement": "recommended"
    },
    "impact_id": {
      "group": "primary",
      "requirement": "recommended",
      "sibling": "impact"
    },
    "impact_score": {
      "group": "primary",
      "requirement": "recommended"
    },
    "kill_chain": {
      "group": "context",
      "requirement": "optional"
    },
    "malware": {
      "group": "context",
      "requirement": "optional",
      "profile": null
    },
    "nist": {
      "group": "context",
      "requirement": "optional"
    },
    "process": {
      "group": "context",
      "requirement": "optional"
    },
    "resources": {
      "group": "primary",
      "requirement": "recommended"
    },
    "risk_level": {
      "group": "primary",
      "requirement": "recommended",
      "profile": null
    },
    "risk_level_id": {
      "group": "primary",
      "requirement": "recommended",
      "sibling": "risk_level",
      "profile": null
    },
    "risk_score": {
      "group": "primary",
      "requirement": "recommended",
      "profile": null
    },
    "state": {
      "description": "The normalized state of a security finding.",
      "group": "context",
      "requirement": "optional"
    },
    "state_id": {
      "description": "The normalized state identifier of a security finding.",
      "group": "context",
      "requirement": "required",
      "enum": {
        "1": {
          "caption": "New",
          "description": "The finding is new and yet to be reviewed."
        },
        "2": {
          "caption": "In Progress",
          "description": "The finding is under review."
        },
        "3": {
          "caption": "Suppressed",
          "description": "The finding was reviewed, considered as a false positive and is now suppressed."
        },
        "4": {
          "caption": "Resolved",
          "description": "The finding was reviewed and remediated and is now considered resolved."
        }
      }
    },
    "vulnerabilities": {
      "group": "context",
      "requirement": "optional"
    }
