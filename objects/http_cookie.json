{
  "name": "HTTP Cookie",
  "type": "http_cookie",
  "description": "An HTTP cookie (web cookie, browser cookie) is a small piece of data that a server sends to a user's web browser.",
  "attributes": {
    "name": {
      "requirement": "required"
    },
    "value": {
      "requirement": "required"
    },
    "http_only": {
      "requirement": "optional"
    },
    "secure": {
      "requirement": "optional"
    },
    "samesite": {
      "requirement": "optional"
    },
    "expires": {
      "requirement": "optional"
    },
    "domain": {
      "requirement": "optional"
    },
    "path": {
      "requirement": "optional"  
    }
  }
}